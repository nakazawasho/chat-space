.notification
.wrapper
  = render 'groups/chat-side'
  .chat-main
    .chat-main__header
      .chat-main__header__left
        .chat-main__header__left__group-name
          %p nakazawa
        .chat-main__header__left__group-member
          %P Member: nakazawa
      .chat-main__header__right
        =link_to "Edit", "/groups/71/edit"
    .chat-main__body
      = render "message"
    .chat-main__footer
      .chat-main__footer__form
        = form_for [@group, @message] do |f|
          = f.text_field(:content, class: "textarea" , placeholder: " type a message", type: "text")
          %i.fa.fa-picture-o{class: "icon"}
          = f.submit(class: "send-button", type: "submit", value: "Send")
