.notification
.wrapper
  = render 'groups/chat-side'
  .chat-main
    .chat-main__header
      .chat-main__header__left
        .chat-main__header__left__group-name
          #{@group.name}
        .chat-main__header__left__group-member
          %p Member: #{render @users}
      .chat-main__header__right
        =link_to "Edit", edit_group_path(@group)
    .chat-main__body
      = render @messages
    .chat-main__footer
      .chat-main__footer__form
        = form_for [@group, @message] do |f|
          = f.text_field(:content, class: "textarea" , placeholder: " type a message", type: "text")
          .chat-main__footer__form__image
            .chat-main__footer__form__image__mask
              = f.label :image, class: "fa fa-picture-o icon" do
                = f.file_field :image
          = f.submit(class: "send-button", type: "submit", value: "Send")
